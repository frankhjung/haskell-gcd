cabal-version:      3.0

name:               gcd
version:            0.10.0
synopsis:           Greatest Common Denominator
description:        Test versions of Euclid's greatest common denominator algorithm
homepage:           https://github.com/frankhjung/gcd#readme
author:             Frank H Jung
maintainer:         frankhjung@linux.com
copyright:          Copyright Â© 2018-2023 Frank H Jung
license:            GPL-3.0-only
license-file:       LICENSE
category:           education
build-type:         Simple
extra-source-files: README.md
tested-with:        GHC == 9.0.2

source-repository head
  type:             git
  location:         git@github.com:frankhjung/haskell-gcd.git

executable          gcd
  hs-source-dirs:   app
                  , src
  main-is:          Main.hs
  default-language: Haskell2010
  build-depends:    base >= 4.13 && < 5.0
                  , gcd
  other-modules:    Paths_gcd
                  , Gcd
  autogen-modules:  Paths_gcd

library
  hs-source-dirs:   src
  default-language: Haskell2010
  exposed-modules:  Gcd
  build-depends:    base

test-suite          test
  hs-source-dirs:   test
                  , src
  main-is:          Test.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  build-depends:    base
                  , hspec >= 2.7 && < 2.9
                  , gcd
  other-modules:    Gcd

benchmark           benchmark
  hs-source-dirs:   bench
                  , src
  main-is:          Bench.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  build-depends:    base
                  , criterion >= 1.5 && < 1.6
                  , gcd
  other-modules:    Gcd
